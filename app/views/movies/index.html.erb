  <% @movies.each do |movie|%>
    <section class="movie">
      <div class="summary">
        <h2>
          <%= link_to movie.title, movie %>
        </h2>
        <h3>
          <%= total_gross(movie) %> 
        </h3>
        <p>
          <%= truncate(movie.description, length: 40, seperator: ' ')%>
        </p>
         <p>
          Released: <%= year_of(movie)%>
        </p>
      </div> 
    </section>
  <%end%>

  <section class="admin">
  <%= link_to 'Add New Event', new_movie_path, class: "button" %>
  </section>